generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  TRAINER
  CLIENT
  ADMIN
}

enum WorkoutDay {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

enum WorkoutStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  SKIPPED
}

enum ExerciseType {
  STRENGTH
  TIMED
  HYBRID
  BODYWEIGHT
  MOBILITY
  CORE
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())

  trainerId String?
  trainer   User?   @relation("TrainerClients", fields: [trainerId], references: [id])
  clients   User[]  @relation("TrainerClients")

  profile  Profile?
  programs Program[] @relation("TrainerPrograms")

  sentMessages        Message[]           @relation("MessageSender")
  receivedMessages    Message[]           @relation("MessageRecipient")
  exercises           Exercise[]
  scheduledWorkouts   ScheduledWorkout[]
  workoutLogs         WorkoutLog[]
  invitesSent         Invite[]
  bodyMetrics         BodyMetric[]
  additionalWorkouts  AdditionalWorkout[]
  exerciseOneRepMaxes ExerciseOneRepMax[]
}

model Profile {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  firstName      String
  lastName       String
  height         Float?
  dob            DateTime?
  experience     String?
  injuryNotes    String? // trainer-visible only
  waiverSignedAt DateTime?
  waiverVersion  String?
}

model BodyMetric {
  id       String @id @default(uuid())
  clientId String
  client   User   @relation(fields: [clientId], references: [id])

  weight  Float?
  bodyFat Float? // BF %

  recordedAt DateTime @default(now())

  @@index([clientId, recordedAt])
}

model Exercise {
  id          String       @id @default(uuid())
  name        String
  type        ExerciseType
  equipment   String?
  muscleGroup String?
  videoUrl    String?
  notes       String?

  trainerId String?
  trainer   User?   @relation(fields: [trainerId], references: [id])

  workoutExercises    WorkoutExercise[]
  exerciseLogs        ExerciseLog[]          @relation("ExerciseToLogs")
  substitutionsFrom   ExerciseSubstitution[] @relation("PrimaryExercise")
  substitutionsTo     ExerciseSubstitution[] @relation("SubstituteExercise")
  exerciseOneRepMaxes ExerciseOneRepMax[]

  @@unique([name, trainerId], name: "exercise_name_trainer_unique")
}

model ExerciseSubstitution {
  id String @id @default(cuid())

  exerciseId   String
  substituteId String

  note String?

  exercise           Exercise @relation("PrimaryExercise", fields: [exerciseId], references: [id])
  substituteExercise Exercise @relation("SubstituteExercise", fields: [substituteId], references: [id])

  @@unique([exerciseId, substituteId])
}

model Program {
  id        String @id @default(uuid())
  trainerId String
  trainer   User   @relation("TrainerPrograms", fields: [trainerId], references: [id])

  name      String
  version   Int      @default(1)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())

  workouts WorkoutTemplate[]
}

model WorkoutTemplate {
  id        String  @id @default(uuid())
  programId String
  program   Program @relation(fields: [programId], references: [id])

  name              String
  order             Int
  day               WorkoutDay         @default(MONDAY)
  exercises         WorkoutExercise[]
  scheduledWorkouts ScheduledWorkout[]
  workoutSections   WorkoutSection[]
}

model WorkoutExercise {
  id String @id @default(uuid())

  sectionId String
  section   WorkoutSection @relation(fields: [sectionId], references: [id])

  prescribed        Json
  order             Int
  notes             String?
  workoutTemplate   WorkoutTemplate? @relation(fields: [workoutTemplateId], references: [id])
  workoutTemplateId String?
  exercise          Exercise?        @relation(fields: [exerciseId], references: [id])
  exerciseId        String?
}

model ScheduledWorkout {
  id String @id @default(uuid())

  workoutId String
  workout   WorkoutTemplate @relation(fields: [workoutId], references: [id])

  clientId String
  client   User   @relation(fields: [clientId], references: [id])

  scheduledDate DateTime
  status        WorkoutStatus @default(SCHEDULED)

  workoutLogs WorkoutLog[]
}

model WorkoutLog {
  id       String @id @default(uuid())
  clientId String
  client   User   @relation(fields: [clientId], references: [id])

  scheduledId String

  scheduled ScheduledWorkout? @relation(fields: [scheduledId], references: [id])

  startedAt DateTime?
  endedAt   DateTime?
  duration  Int?
  notes     String?
  status    WorkoutStatus
  exercises ExerciseLog[]
  createdAt DateTime      @default(now())

  @@unique([scheduledId])
}

model ExerciseLog {
  id           String     @id @default(uuid())
  workoutLogId String
  workoutLog   WorkoutLog @relation(fields: [workoutLogId], references: [id])

  exerciseId String
  exercise   Exercise @relation("ExerciseToLogs", fields: [exerciseId], references: [id])

  prescribed Json
  performed  Json

  substitutedFrom    String?
  substitutionReason String?
}

model EditHistory {
  id        String   @id @default(uuid())
  entity    String
  entityId  String
  editedBy  String
  reason    String
  before    Json
  after     Json
  createdAt DateTime @default(now())
}

model Message {
  id String @id @default(uuid())

  senderId String
  sender   User   @relation("MessageSender", fields: [senderId], references: [id])

  recipientId String
  recipient   User   @relation("MessageRecipient", fields: [recipientId], references: [id])

  content      String
  workoutLogId String?
  createdAt    DateTime @default(now())
}

model Invite {
  id        String @id @default(uuid())
  token     String @unique
  email     String
  trainerId String
  trainer   User   @relation(fields: [trainerId], references: [id])

  accepted  Boolean  @default(false)
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model WorkoutSection {
  id        String          @id @default(uuid())
  workoutId String
  workout   WorkoutTemplate @relation(fields: [workoutId], references: [id])

  title String
  order Int

  exercises WorkoutExercise[]

  @@unique([workoutId, order])
}

model AdditionalWorkoutType {
  id        String   @id @default(uuid())
  name      String   @unique // "Walk", "Run", "Tennis", "HIIT"
  active    Boolean  @default(true)
  createdAt DateTime @default(now())

  workouts AdditionalWorkout[]
}

model AdditionalWorkout {
  id       String @id @default(uuid())
  clientId String
  client   User   @relation(fields: [clientId], references: [id])

  typeId String
  type   AdditionalWorkoutType @relation(fields: [typeId], references: [id])

  duration Int?
  distance Float?
  notes    String?

  performedAt DateTime
  createdAt   DateTime @default(now())

  @@index([clientId, performedAt])
}

model ExerciseOneRepMax {
  id         String   @id @default(uuid())
  clientId   String
  exerciseId String
  oneRepMax  Float
  recordedAt DateTime @default(now())

  client   User     @relation(fields: [clientId], references: [id])
  exercise Exercise @relation(fields: [exerciseId], references: [id])

  @@index([clientId, exerciseId, recordedAt])
}
